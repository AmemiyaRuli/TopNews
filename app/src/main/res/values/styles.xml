<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_view_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/loading_dialog_view_in_anim</item>
        <item name="android:windowExitAnimation">@anim/loading_dialog_view_out_anim</item>
    </style>

    <style name="dialog_view_theme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="share_dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/out_to_bottom</item>
    </style>
    <!-- 首页底部导航栏按钮 -->
    <style name="main_tab_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/main_tab_item_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="table_layout_favor_histor_activity_text_size" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>
    <!--splashActivity的主题，在setContentView()加载布局前显示，防止白屏出现-->
    <style name="splash_activity_theme_tower" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_activity_tower</item>
    </style>

    <style name="splash_activity_theme_road" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_activity_road</item>
    </style>
</resources>
