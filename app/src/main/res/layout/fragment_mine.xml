<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header_login_rtl"
        layout="@layout/header_fragment_mine_login"
        android:visibility="visible"></include>

    <include
        android:id="@+id/header_user_into_rtl"
        layout="@layout/header_fragment_mine_user_info"
        android:visibility="gone"></include>

    <RelativeLayout
        android:id="@+id/mine_rtl_favo_histor_night"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="153dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/mine_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/mine_favorite"
            android:text="@string/mine_favorite"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/mine_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/mine_history"
            android:text="@string/mine_history"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:id="@+id/mine_divide_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/mine_rtl_favo_histor_night"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/mine_broke_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_divide_line"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/mine_broke_news"
            android:textSize="17sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_arrow_right" />


    </RelativeLayout>

    <View
        android:id="@+id/mine_divide_line_broke_news"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/mine_broke_news"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/mine_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_divide_line_broke_news"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/mine_user_feed_back"
            android:textSize="17sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_arrow_right" />


    </RelativeLayout>

    <View
        android:id="@+id/mine_divide_line_feed_back"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/mine_feedback"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/mine_app_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_divide_line_feed_back"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/mine_app_settings"
            android:textSize="17sp" />

        <Button
            android:id="@+id/mine_app_settings_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_arrow_right" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/mine_app_settings"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3"></View>


</RelativeLayout>
