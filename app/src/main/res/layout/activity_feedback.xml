<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_feedback_title_rlt"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/activity_feedback_go_back"
            android:layout_width="56dp"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/left_back_icon_titlebar" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/feedback_title"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/activity_feedback_send"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/feedback_send"
                android:textSize="17sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/grey13">
            >


        </View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_feedback_content_rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_feedback_title_rlt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_feedback_content_bg">

        <EditText
            android:id="@+id/activity_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:enabled="true"
            android:gravity="top"
            android:hint="@string/feedback_hint_content"
            android:inputType="textMultiLine"
            android:maxLines="8"
            android:minLines="5"
            android:paddingLeft="5dp"
            android:paddingRight="65dp"
            android:paddingTop="5dp"
            android:scrollbars="vertical"
            android:textSize="16sp"></EditText>

        <ImageView
            android:id="@+id/activity_feedback_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/feedback_camera_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_feedback_contact_rlt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_feedback_content_rlt"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/activity_feedback_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_feedback_contact_bg"
            android:hint="@string/feedback_contact"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:textSize="16sp"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_feedback_contact"
            android:layout_marginTop="5dp"
            android:text="@string/feedback_contact_hint"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>