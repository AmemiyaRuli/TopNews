<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xi.liuliu.topnews.activity.SettingsActivity">

    <RelativeLayout
        android:id="@+id/header_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/settings_left_back_icon"
            android:layout_width="56dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/left_back_icon_titlebar" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/settings_title"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divide_line_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/header_activity_settings"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/edit_personal_info_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line_activity_settings"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_edit_personal_info"
            android:textSize="17sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_arrow_right" />


    </RelativeLayout>

    <View
        android:id="@+id/divide_line_edit_personal_info"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/edit_personal_info_rl"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/clear_cache_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line_edit_personal_info"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_clear_cache"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/clear_cache_counting"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:id="@+id/divide_line_clear_cache_rl"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/clear_cache_rl"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3">

    </View>

    <RelativeLayout
        android:id="@+id/check_version_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line_clear_cache_rl"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_check_version"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/version_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="版本号.版本名称"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:id="@+id/divide_line_check_version"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/check_version_rl"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3"></View>

    <RelativeLayout
        android:id="@+id/video_notice_no_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide_line_check_version"
        android:background="@drawable/selector_mine_fragment_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_notice_with_not_wifi"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/not_wifi_warn_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="@string/not_wifi_dialog_warn_once"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:id="@+id/divide_line_video_notice_no_wifi"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/check_version_rl"
        android:layout_marginLeft="15dp"
        android:background="#E3E3E3"></View>

    <LinearLayout
        android:id="@+id/tailer_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey7"
        android:orientation="vertical">

        <TextView

            android:id="@+id/settings_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_mine_fragment_item"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_log_out"
            android:textColor="@color/red_light"
            android:textSize="17sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/user_agreement_activity_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/settings_user_agreement"
            android:textColor="@color/user_agreement_txt"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/settings_right_reserved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="25dp"
            android:gravity="center|bottom"
            android:paddingBottom="12dp"
            android:text="@string/settings_rights_reserved"
            android:textColor="#aaa"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
