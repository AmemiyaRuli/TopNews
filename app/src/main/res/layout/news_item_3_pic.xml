<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/news_item_3_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:alpha="0.15"
        android:background="@color/grey13"></View>

    <TextView
        android:id="@+id/news_item_3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="又到一年招聘季，富士康岗位需求量大，没想到本科大学生薪酬这么高" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_item_3_imageview_1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#ff0000" />

        <ImageView
            android:id="@+id/news_item_3_imageview_2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="#ffff00" />

        <ImageView
            android:id="@+id/news_item_3_imageview_3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="#00ffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/news_item_3_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时尚新时尚" />

        <TextView
            android:id="@+id/news_item_3_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="2017.06.13 17:00" />
    </LinearLayout>
</LinearLayout>